{
  "name": "boilerplate-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "engines": {
    "node": ">=18.16"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.414.0",
    "@prisma/client": "^5.3.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.85",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.9.0",
    "zod": "^3.22.2"
  },
  "scripts": {
    "build": "swc src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "start": "yarn build && node dist/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "prod": "yarn migration:deploy && yarn start",
    "migration": "cross-env DATABASE_HOST='localhost' yarn prisma migrate dev && yarn generate",
    "migration:deploy": "yarn prisma migrate deploy",
    "migration:reset": "cross-env DATABASE_HOST='localhost' yarn prisma migrate reset --force",
    "studio": "cross-env DATABASE_HOST='localhost' yarn prisma studio",
    "generate": "yarn prisma generate",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "push": "cross-env DATABASE_HOST='localhost' yarn prisma db push",
    "test:ci": "cross-env DATABASE_URL='postgres://postgres:postgres@localhost:5432/postgres' yarn prisma db push && cross-env JWT_REFRESH_SECRET=CITi JWT_ACCESS_SECRET=CITi DATABASE_URL='postgres://postgres:postgres@localhost:5432/postgres' jest --runInBand --ci",
    "test": "cross-env DATABASE_URL='postgres://postgres:docker@localhost:5433/boilerplate-test' yarn prisma db push && cross-env DATABASE_URL='postgres://postgres:docker@localhost:5433/boilerplate-test' jest --runInBand",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.29",
    "@types/bcryptjs": "^2.4.4",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "20.10.3",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "prisma": "^5.2.0",
    "prisma-dbml-generator": "^0.10.0",
    "supertest": "^6.2.2",
    "ts-jest": "^29.1.1",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
